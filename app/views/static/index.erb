<div id="main-wrapper">
<% unless logged_in? %>
	<!-- Display sign up form -->
	<div id="sign-up-container">
		<h2>Sign up for an account!</h2>
		<form id="sign-up-form" action="/signup" method="post">
			<input type="text" name="user[name]" placeholder="Name"><br>
			<input type="email" name="user[email]" placeholder="Email"><br>
			<input type="password" name="user[password]" placeholder="Password"><br>
			<input type="password" name="confirmPassword" placeholder="Confirm Password"><br>
			<input type="submit" value="Sign Up">
		</form>
	</div>

	<!-- Display login form -->
	<div id="login-container">
		<h2>Login</h2>
		<form id="login-form" action="/login" method="post">
			<input type="text" name="user[email]" placeholder="Email"><br>
			<input type="password" name="user[password]" placeholder="Password"><br>
			<input type="submit" value="Login">
		</form>
	</div>

	<!-- Display error messages -->
	<% if @errors %>
	  <p class="error">Invalid input! Please check your input.</p>
	  <ul>
		<% @errors.each do |error| %>
			<li class="error"><%= error[0].to_s %>: <%= error[1].join(",") %></li>
		<% end %>
	  </ul>
	<% end %>
<% else %>
	<!-- Display homepage / user dashboard -->
	<% @title = "Home - Quora" %>

	<!-- Display 'Ask Question' -->
	<div class="ask-question-container">
		<a class="user" href="/users/<%= current_user.id %>"><%= current_user.name %></a>
		<form id="ask-question-form" action="/questions" method="post">
			<textarea name="question[title]" id="ask-question-form" placeholder="What is your question?"></textarea><br>
			<input type="hidden" name="question[user_id]" value="<% current_user.id %>"><br>
			<input class="ask-button" type="submit" value="Ask Question">
		</form>
	</div>

	<!-- Display all questions -->
	<div class="feed-story">
		<% @questions.each do |question| %>
			<div class="feed-item">
					<div class="feed-title">
						<a href="/questions/<%= question.id %>"><%= question.title %></a>
					</div>
					<div class="feed-answer">
						
					</div>
					<div class="feed-action">
						<button>Answer</button>
						<div>
							<div class="answer-editor-header">
								<a class="user" href="/users/<%= current_user.id %>"><%= current_user.name %></a>
							</div>
							<div>
								<form id="answer-form" action="/answers" method="post">
									<textarea name="answer[title]" id="answer-form" placeholder="Write your answer"></textarea><br>
									<input type="hidden" name="answer[user_id]" value="<% current_user.id %>"><br>
									<input class="answer-button" type="submit" value="Submit">
								</form>
							</div>
						</div>
					</div>
			</div>
		<% end %>
	</div>
<% end %>
</div>

