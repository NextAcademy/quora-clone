<div class="first">


<h2>Login</h2>
<form action="/login" method="post" >
    <input type=text placeholder="Email" name="user[email]"><br>
    <input type=password placeholder="Password" name="user[password]"></br>
    <input type=submit value="Login">
</form>
<p> or </p>

<div class="first">
	<h2> Sign up for an account now</h2>
<form action="/signup" method="post">
	<input type=text placeholder="First Name" name="user[first_name]">
	<input type=text placeholder="Last Name" name="user[last_name]"><br>
	<input type=text placeholder="Email" name="user[email]"><br>
	<input type=password placeholder="Password" name="user[password]"></br>
	<input type=submit value="Sign up">
</form>
</div>

<%= @message if @message %>



</div>